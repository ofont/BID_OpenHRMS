<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="request_visibility" model="ir.rule">
        <field name="name">Request Visibility</field>
        <field ref="model_service_request" name="model_id"/>
        <field name="domain_force">['|', ('employee.address_home_id.id','=',user.partner_id.id), ('employee.address_home_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="execute_visibility" model="ir.rule">
        <field name="name">Execute Visibility</field>
        <field ref="model_service_execute" name="model_id"/>
        <field name="domain_force">['|', ('executer.address_home_id.id','=',user.partner_id.id), ('executer.address_home_id','=',False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="module_service_execute" model="ir.module.category">
        <field name="name">Service</field>
        <field name="sequence">5</field>
    </record>

    <record id="service_group_executer" model="res.groups">
        <field name="name">Service Executer</field>
        <field name="category_id" ref="module_service_execute"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>